code = "shader_type spatial;
render_mode unshaded;

uniform float dayNightValue;

uniform sampler2D waterTexture;

uniform float waveHeight = 2.0;
uniform float waveSpeed = 5.0;
uniform float waveScale = 5.0;
uniform float waveTextureSpeed = 0.1;

void vertex()
{
	//VERTEX.y += sin((TIME * waveSpeed) + (VERTEX.x + VERTEX.z) * waveScale) * waveHeight; 
	VERTEX.y += sin((TIME * waveSpeed) + ((VERTEX.x + VERTEX.z) * waveScale) + texture(waterTexture, VERTEX.xz).r * 5.0) * waveHeight;
	
	UV *= 64.0;
}

void fragment()
{
	float delta = abs(2.0*fract(dayNightValue)-1.0);
	
	vec4 firstTex = texture(waterTexture, UV - TIME * waveTextureSpeed);
	vec4 secondTex = texture(waterTexture, vec2(-UV.y, UV.x) + TIME * waveTextureSpeed * 0.4);
	
	vec3 fogCol = mix(vec3(0.95, 0.7, 0.6), vec3(0.6, 0.7, 0.95), delta);
	float fog = clamp(pow(length(VERTEX)*0.009, 5.5), 0, 1.0);
	
	ALBEDO = mix((vec4(0.0, 0.18, 0.3, 1.0) * (firstTex + secondTex*.3)).rgb, fogCol, fog);
}"

